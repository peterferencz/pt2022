<Window x:Class="pt2022.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pt2022"
        mc:Ignorable="d"
        Title="Login" Height="332" Width="279" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btn_login" Content="Login" HorizontalAlignment="Center" Margin="0,266,0,0" VerticalAlignment="Top" Width="259" Height="29" Click="btn_login_Click"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Segoe UI" FontWeight="Bold" Width="259"/>
        <TextBox x:Name="tb_username" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Margin="10,91,10,0"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="tb_password" Margin="10,159,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="30"/>
        <Label x:Name="l_error" Foreground="Tomato" Content="" Margin="0,231,0,0" VerticalAlignment="Top" FontSize="20" Height="35" HorizontalAlignment="Center" Width="259"/>

    </Grid>
</Window>
